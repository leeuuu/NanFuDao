{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals":{
        "$":true,
        "$request":true,
        "$response":true,
        "$notify":true,
        "$notification":true,
        "$httpClient":true,
        "$task":true,
        "$prefs":true,
        "$persistentStore":true,
        "$done":true
    }
}
